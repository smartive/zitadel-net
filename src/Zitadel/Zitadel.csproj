<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="..\..\config\Common.targets" />
    <Import Project="..\..\config\CodeAnalysis.targets" />

    <PropertyGroup>
        <Title>Zitadel AuthN</Title>
        <PackageId>Zitadel</PackageId>
        <PackageTags>Zitadel;Authentication;Authorization;Middleware;oidc</PackageTags>
        <Description>
            This package contains the library for authentication and authorization
            against https://zitadel.cloud. The package gives easy configurable
            options to integrate ZITADEL authentication with any web application
            or web API.

            Additionally, it provides convenience functions for Zitadel.gRPC clients.
        </Description>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Zitadel.Grpc\Zitadel.Grpc.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="BouncyCastle.Cryptography" Version="2.2.1" />
      <PackageReference Include="IdentityModel.AspNetCore.OAuth2Introspection" Version="6.2.0" />
      <PackageReference Include="jose-jwt" Version="4.1.0" />
      <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.2.0" />
    </ItemGroup>
    
    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
        <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="6.0.26" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="6.0.26" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
        <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="7.0.15" />
        <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="7.0.15" />
    </ItemGroup>
    
</Project>
