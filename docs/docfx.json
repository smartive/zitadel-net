{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "src": "../src/Zitadel"
        }
      ],
      "dest": "zitadel"
    },
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "src": "../src/Zitadel.Api"
        }
      ],
      "dest": "zitadel-api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["zitadel/**.yml", "zitadel/index.md"]
      },
      {
        "files": ["zitadel-api/**.yml", "zitadel-api/index.md"]
      },
      {
        "files": ["docs/**.md", "docs/**/toc.yml", "toc.yml", "*.md"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"],
    "globalMetadata": {
      "_appTitle": "Zitadel .Net Documentation",
      "_appFooter": "Â© Copyright 2021 CAOS AG & Authors",
      "_appFaviconPath": "images/icon.png"
    },
    "dest": "public",
    "sitemap": {
      "baseUrl": "https://caos.github.io/zitadel-net/"
    },
    "template": ["statictoc"]
  }
}
